@using MvcSanpham.Models

@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_LayoutGiohang.cshtml";
}

<h2 style="text-align: center">Thông tin đơn hàng</h2>

<div class="container">
    <!-- row -->
    <div class="row">
        <form id="checkout-form" class="clearfix">
            <div class="col-md-12">
                <div class="order-summary clearfix">
                    <div class="section-title">
                        <h3 class="title">Giỏ Hàng</h3>
                    </div>
                    <table class="shopping-cart-table table">
                        <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th></th>
                            <th class="text-center">Đơn giá</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-center">Thành tiền</th>
                              
                        </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                            <tr>
                                <td class="thumb"><img src="~/sanpham/@item.sAnhbia"></td>
                                <td class="details">
                                    <a href="#">@item.sTenSP</a>
                                    <ul>
                                        <li><span>Size: XL</span></li>
                                        <li><span>Color: Camelot</span></li>
                                    </ul>
                                </td>
                                <td class="price text-center">@String.Format("{0:0,0}", item.dGiaHienTai) VNĐ<br><del class="font-weak"><small>$40.00</small></del></td>
                                <td class="qty text-center">@item.iSoluong</td>
                                <td class="total text-center"><strong class="primary-color">@String.Format("{0:0,0}", item.dThanhtien) VNĐ</strong></td>
                                    
                            </tr>


                            </tbody>
                        }
                        <tfoot>
                          
                        <tr>
                            <th class="empty" colspan="3"></th>
                            <th>Giỏ hàng:</th>
                            <th colspan="2" class="sub-total"> @ViewBag.Tongsoluong sản phẩm</th>
                        </tr>
                           
                        <tr>
                            <th class="empty" colspan="3"></th>
                            <th>Hình thức giao hàng</th>
                            <td colspan="2">Free Shipping</td>
                        </tr>
                        <tr>
                            <th class="empty" colspan="3"></th>
                            <th>TỔNG TIỀN THANH TOÁN</th>
                            <th colspan="2" class="total">@String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</th>
                        </tr>
                        </tfoot>

                    </table>
                    <div class="pull-right">
                        <button class="primary-btn">@Html.ActionLink("Quay lại giỏ hàng", "GioHang", "GioHang")</button>
                    </div>

                </div>

            </div>
        </form>
    </div>
    <!-- /row -->
</div>
<!DOCTYPE html>
<html>
<head>
    <style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 300px;
  margin: auto;
  text-align: center;
  font-family: arial;
}

.price {
  color: grey;
  font-size: 22px;
}

.card button {
  border: none;
  outline: 0;
  padding: 12px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
}

.card button:hover {
  opacity: 0.7;
}
</style>
</head>
<body>

<h2 style="text-align:center">THÔNG TIN NGƯỜI NHẬN</h2>
@{
    KhachHang kh = (KhachHang) Session["Taikhoan"];
}
@using (Html.BeginForm())
{

    @Html.ValidationSummary(true)
    <div class="card">
        <img src="/Images/img_avatar.png" alt="Denim Jeans" style="width:100%">
        <h1>@kh.HoTen</h1>
        <p>Số điện thoại:</p>
        <p class="price">@kh.DienThoai</p>
        <p>Địa chỉ người nhận:</p>
        <p>@kh.DiaChi</p>
        <p>Email:</p>
        <p>@kh.Email</p>
        <p>Ngày đặt hàng</p>
        <p>@DateTime.Now.ToShortDateString()</p>


    </div>

    <input type="Submit" value="ĐỒNG Ý ĐẶT HÀNG"/>

}
</body>
</html>



