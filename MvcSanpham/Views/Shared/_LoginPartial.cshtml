@if (Session["Taikhoan"] != null)
{
    <div class="pull-right">
        <ul class="header-btns">
            <!-- Account -->
            <li class="header-account dropdown default-dropdown">
                <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
                    <div class="header-btns-icon">
                        <i class="fa fa-user-o"></i>
                    </div>
                    <strong class="text-uppercase">Xin chao @Session["Tentaikhoan"]<i class="fa fa-caret-down"></i></strong>
                </div>
                <a href=@Url.Action("Dangxuat","User") class="text-uppercase">Đăng xuất</a>
               
                <ul class="custom-menu">
                    <li><a href="#"><i class="fa fa-user-o"></i> My Account</a></li>
                    <li><a href="#"><i class="fa fa-heart-o"></i> My Wishlist</a></li>
                    <li><a href="#"><i class="fa fa-exchange"></i> Compare</a></li>
                    <li><a href="#"><i class="fa fa-check"></i> Checkout</a></li>                    
                    <li><a href=@Url.Action("Dangxuat","User")><i class="fa fa-user-plus"></i>Đăng xuất</a></li>
                </ul>
            </li>
            <!-- /Account -->
            <!-- Cart -->
            @Html.Action("GiohangPartial", "GioHang")
            <!-- /Cart -->
            <!-- Mobile nav toggle-->
            <li class="nav-toggle">
                <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
            </li>
            <!-- / Mobile nav toggle -->
        </ul>
    </div>
}
else
{
    <div class="pull-right">
        <ul class="header-btns">
            <!-- Account -->
            <li class="header-account dropdown default-dropdown">
                <div class="dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="true">
                    <div class="header-btns-icon">
                        <i class="fa fa-user-o"></i>
                    </div>
                    <strong class="text-uppercase">My Account <i class="fa fa-caret-down"></i></strong>
                </div>
                <a href=@Url.Action("Dangnhap","User") class="text-uppercase">Đ.Nhập</a> / <a href=@Url.Action("Dangky","User") class="text-uppercase">Đ.Ký</a>
               
                <ul class="custom-menu">
                    <li><a href="#"><i class="fa fa-user-o"></i> My Account</a></li>
                    <li><a href="#"><i class="fa fa-heart-o"></i> My Wishlist</a></li>
                    <li><a href="#"><i class="fa fa-exchange"></i> Compare</a></li>
                    <li><a href="#"><i class="fa fa-check"></i> Checkout</a></li>
                    <li><a href=@Url.Action("Dangnhap","User")><i class="fa fa-unlock-alt"></i>Đ.Nhập</a></li>
                    <li><a href=@Url.Action("Dangky","User")><i class="fa fa-user-plus"></i> Đ.Ký</a></li>
                </ul>
            </li>
            <!-- /Account -->
            <!-- Cart -->
           
           
            <!-- / Mobile nav toggle -->
        </ul>
    </div>

}
